# ===========================================
# WordPress Docker 環境変数設定
# ===========================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# -------------------------------------------
# 開発環境設定
# -------------------------------------------
# WordPress設定
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress

# MySQL設定
MYSQL_ROOT_PASSWORD=wordpress
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress

# WordPress開発用ポート
WORDPRESS_PORT=8000

# WordPress初期セットアップ設定（WP-CLI用）
WP_URL=http://localhost:8000
WP_TITLE=Newsider HP
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin
WP_ADMIN_EMAIL=admin@example.com

# -------------------------------------------
# 本番環境設定（AWS）
# -------------------------------------------
# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCOUNT_ID=

# プロジェクト設定
PROJECT_NAME=wordpress-docker
ENVIRONMENT=production

# RDS設定
RDS_INSTANCE_TYPE=db.t3.micro
RDS_ALLOCATED_STORAGE=20
RDS_DATABASE_NAME=wordpress
RDS_USERNAME=admin
RDS_PASSWORD=
# ↑本番環境では強力なパスワードを設定してください

# ECS設定
ECS_TASK_CPU=512
ECS_TASK_MEMORY=1024
ECS_DESIRED_COUNT=2
ECS_MIN_CAPACITY=2
ECS_MAX_CAPACITY=10

# CloudFront設定
CLOUDFRONT_PRICE_CLASS=PriceClass_All

# WAF設定（true/falseで有効/無効を切り替え）
ENABLE_WAF=false

# ドメイン設定（オプション）
DOMAIN_NAME=
CERTIFICATE_ARN=

# タグ設定
TAG_OWNER=
TAG_PROJECT=wordpress-docker
TAG_ENVIRONMENT=production
